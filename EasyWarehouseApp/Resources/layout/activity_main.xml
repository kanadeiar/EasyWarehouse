<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">
    <Button
        android:id="@+id/buttonAdd"
        android:text="Добавить товар на склад"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonDelete"
        android:text="Удалить товар со склада"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonProducts"
        android:text="Информация по товаром"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
      android:id="@+id/buttonPlaces"
      android:text="Информация по местам хранения"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

</LinearLayout>